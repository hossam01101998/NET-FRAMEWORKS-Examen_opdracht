@model NET_FRAMEWORKS_EXAMEN_OPDRACHT.Models.Invoice

@{
    ViewData["Title"] = "Edit";
}

@using System.Globalization

<h1>Edit</h1>

<h4>Invoice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InvoiceId" />
            <div class="form-group">
                <label asp-for="CarID" class="control-label">Car</label>
                @Html.DropDownListFor(model => model.CarID, ViewData["CarID"] as SelectList, "-- Select Car --", new { @class = "form-control" })
                <span asp-validation-for="CarID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IssueDate" class="control-label"></label>
                <input asp-for="IssueDate" class="form-control" value="@ViewData["FormattedInvoiceDate"]" />
                <span asp-validation-for="IssueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalAmount" class="control-label">Total Amount</label>
                <input asp-for="TotalAmount" class="form-control" value="@Model.TotalAmount.ToString("F2", CultureInfo.InvariantCulture)" />
                <span asp-validation-for="TotalAmount" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index" class="btn btn-custom">Back to List</a>
</div>

<style>
    .btn-custom {
        background-color: green;
        color: #fff;
        border-color: darkgreen;
    }

        .btn-custom:hover {
            background-color: darkgreen;
            color: #fff;
        }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

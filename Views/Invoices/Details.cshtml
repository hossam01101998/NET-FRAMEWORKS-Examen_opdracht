@model NET_FRAMEWORKS_EXAMEN_OPDRACHT.Models.Invoice

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IssueDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IssueDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalAmount) €
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Details)
        </dd>
        
        <dd class="col-sm-10">
            <div class="custom-bg-blue p-3 rounded">
                <h4>Customer</h4>
                <dl class="row">
                    <dt class="col-sm-2">
                        Customer Name
                    </dt>
                    <dd class="col-sm-10 text-dark">
                        @Html.DisplayFor(model => model.Car.Customer.Name)
                    </dd>
                    <dt class="col-sm-2">
                        Address
                    </dt>
                    <dd class="col-sm-10 text-dark">
                        @Html.DisplayFor(model => model.Car.Customer.Adress)
                    </dd>
                    <dt class="col-sm-2">
                        Email
                    </dt>
                    <dd class="col-sm-10 text-dark">
                        @Html.DisplayFor(model => model.Car.Customer.Email)
                    </dd>
                    <dt class="col-sm-2">
                        Phone Number
                    </dt>
                    <dd class="col-sm-10 text-dark">
                        @Html.DisplayFor(model => model.Car.Customer.PhoneNumber)
                    </dd>
                </dl>
            </div>
        </dd>
        <dd class="col-sm-10">
            <div class="custom-bg-green p-3 rounded">
                <h4>Car Details</h4>

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Car.Make)
                    </dt>
                    <dd class="col-sm-10 text-dark">
                        @Html.DisplayFor(model => model.Car.Make)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Car.Model)
                    </dt>
                    <dd class="col-sm-10 text-dark">
                        @Html.DisplayFor(model => model.Car.Model)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Car.LicensePlate)
                    </dt>
                    <dd class="col-sm-10 text-dark">
                        @Html.DisplayFor(model => model.Car.LicensePlate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Car.ChassisNumber)
                    </dt>
                    <dd class="col-sm-10 text-dark">
                        @Html.DisplayFor(model => model.Car.ChassisNumber)
                    </dd>
                    
                </dl>
            </div>
        </dd>
    </dl>
</div>
<div>
    <br/>
    <a asp-action="Edit" asp-route-id="@Model?.InvoiceId" class="btn btn-warning">Edit</a> 
    <div>
        <br />
        <a asp-action="Index" class="btn btn-custom">Back to List</a>
    </div>

    <style>
        .btn-custom {
            background-color: green;
            color: #fff;
            border-color: darkgreen;
        }

            .btn-custom:hover {
                background-color: darkgreen;
                color: #fff;
            }

        .custom-bg-green {
            background-color: lightgreen;
        }

        .custom-bg-blue {
            background-color: lightblue;
        }
    </style>
</div>

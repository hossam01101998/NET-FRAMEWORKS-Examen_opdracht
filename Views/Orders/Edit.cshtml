@model NET_FRAMEWORKS_EXAMEN_OPDRACHT.Models.Order

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderId" />
                        
            <div class="form-group">
                <label asp-for="CarID" class="control-label">Car</label>
                @Html.DropDownListFor(model => model.CarID, ViewData["CarID"] as SelectList, "-- Select Car --", new { @class = "form-control" })
                <span asp-validation-for="CarID" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="OrderDetails" class="control-label"></label>
                <input asp-for="OrderDetails" class="form-control" />
                <span asp-validation-for="OrderDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index" class="btn btn-custom">Back to List</a>
</div>

<style>
    .btn-custom {
        background-color: green;
        color: #fff;
        border-color: darkgreen;
    }

        .btn-custom:hover {
            background-color: darkgreen;
            color: #fff;
        }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
